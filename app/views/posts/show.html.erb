
<p style="color: green"><%= notice %></p>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @post.title%></h5>
    <h6 class="card-subtitle mb-3 text-muted">Author: <%= @post.name %></h6>
    <p class="card-text"><%=@post.content%></p>
    <a class="card-link"><%= link_to "Edit this post", edit_post_path(@post)%></a>
    |
    <a class="card-link"><%= link_to "Back to posts", posts_path %></a>
    <div>
      <br>
      <%= button_to "Destroy this post", @post, method: :delete%>
    </div>
  </div>
</div>





